<% if flash[:alert].present? %>
	<%= flash[:alert] %>
<% end %>
<table>
	<tr>
		<td>Title</td>
		<td>Description</td>
		<td colspan="3" align="center">Move</td>
	</tr>
	<% @film.each do |z| %>
		<tr>
			<td><%= z.title %></td>
			<td><%= z.description %></td>
			<td><%= link_to "Show", film_path(z) %></td>
			<td><%= link_to "Edit", edit_film_path(z) %></td>
			<td><%= link_to "Delete", film_path(z), method: :delete, data: {confirm: "Really ?"} %></td>
		</tr>
	<% end %>
</table>
</br>
<button><%= link_to "Add Film", new_film_path %></button>
